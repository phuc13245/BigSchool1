
@{ ViewBag.Title = "Mine";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
<li>
    <div class="date">
        <div class="month">
            @course.DateTime.ToString("MM")
        </div>
        <div class="day">
            @course.DateTime.ToString("dd")
        </div>
    </div>
    <div class="details">
        <span class="lecture">
            @course.LecturerId
        </span>
        <span class="category">
            @course.Category.Name
        </span>
    </div>
    <div class="action">
        <a href="">Edit</a>
        <a href="">Delete</a>
    </div>
</li>}
    </ul>
</div>